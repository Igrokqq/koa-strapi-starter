{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "rules": {
        "no-underscore-dangle": "off",
        "no-shadow": "off",
        "func-names": "off",
        "global-require": "off",
        "max-len": ["error", 150]
    }
}